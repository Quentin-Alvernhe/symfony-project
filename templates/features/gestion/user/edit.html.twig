{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Modifier l'utilisateur {{ user.fullName }}</h1>

        <div class="card shadow-sm p-4">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                {% for field in form|filter(f => f.vars.name not in ['_token', 'password'])%}
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(field) }}
                        </div>
                    </div>
                {% endfor %}
                <div class="col-md-6">
                <div class="form-group">
                        {{ form_label(form.password.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password.first) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(form.password.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password.second) }}
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-warning mt-3">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}